                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Cost of Living"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/J1COL"
                android:layout_width="wrap_content"
